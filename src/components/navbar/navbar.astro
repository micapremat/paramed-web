---
import Container from "@/components/Container.astro";
import Link from "@/components/ui/link.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import logo from "@/assets/logo.png";
import { Picture } from "astro:assets";
import MenuItemsDynamic from "./MenuItemsDynamic.jsx";
import LoginButtons from "@/components/login/LoginButtons.jsx";
---

<Container>
  <header class='flex flex-col lg:flex-row justify-between items-center my-5'>
    <Astronav>
      <div class='flex w-full lg:w-auto items-center justify-between'>
        <a href='/' class='text-lg'>
          <Picture
            src={logo}
            alt='Astronaut in the air'
            widths={[180, 380, 580]}
            sizes='(max-width: 500px) 100vw, 620px'
            loading='eager'
            format='avif'
            width={80}
          />
        </a>
        <div class='flex lg:hidden'>
          <LoginButtons client:load />
          <MenuIcon class='w-6 h-6 text-gray-800' />
        </div>
      </div>

      <MenuItems class='hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0'>
        <MenuItemsDynamic client:load />
      </MenuItems>
    </Astronav>
    <div>
      <div class='hidden lg:flex items-center gap-4'>
        <LoginButtons client:load />
      </div>
    </div>
  </header>
</Container>
